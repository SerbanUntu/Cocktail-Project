{
	"compilerOptions": {
		"outDir": "./dist/",
		"noImplicitAny": true,
		"module": "es6",
		"target": "es5",
		"jsx": "react",
		"moduleResolution": "node",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true
	},
	"exclude": [
		"node_modules",
		"**/*.spec.ts",
		"**/*.test.ts"
	],
	"include": [
		"src",
		"index.d.ts"
	]
}